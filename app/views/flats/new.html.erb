
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name  %>
      <%= f.input :address %>
      <%= f.input :description %>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :number_of_guests %>
        </div>
        <div class="col-md-6">
          <%= f.input :price_per_night %>
        </div>
      </div>
      <%= f.submit 'submit', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
