

<div class="container">
  <h1>All our flats</h1>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="flat-card">
        <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=1200')"></div>
        <div class="flat-card-content">
          <h4><%= flat.name %></h4>
          <p><%= flat.address%></p>
          <div class="icon-bar">
            <div class="guests">
              <i class="material-icons mr-2">people</i>
              <%= flat.number_of_guests %>
            </div>
            <div class="price">
              <i class="material-icons mr-2">euro_symbol</i>
              <%= flat.price_per_night %>
            </div>
          </div>
        </div>

        <div class="flat-card-actions">
          <%= link_to 'More Info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat), class: "ml-3 text-warning" %>
          <%= link_to 'Remove', flat_path(flat), class: "ml-3 text-danger" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
</div>
